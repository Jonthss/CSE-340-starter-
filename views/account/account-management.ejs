<div class="account-form-container">
    <h1><%= title %></h1>
    <%- messages() %>

    
    <div class="account-form">
        <h2>Welcome, <%= locals.accountData.account_firstname %></h2>
        <p>You're logged in.</p>
        <hr>

        <h3>Account Management</h3>
        <p>
            <a href="/account/update/<%= locals.accountData.account_id %>" title="Click to update your account information">Update Account Information</a>
        </p>

        <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
            <h3>Inventory Management</h3>
            <p>
                <a href="/inv/" title="Click to access inventory management">Manage Inventory</a>
            </p>
        <% } %>
        <hr>
        <h3>Favorites Management</h3>
        <p> 
            <a href="/favorites/" title="Click to view your favorite vehicles">View Your Favorites</a>
        </p>
    </div>
</div>