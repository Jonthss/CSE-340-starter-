<div class="account-form-container">
    <% if (title) { %>
        <h1><%- title %></h1>
    <% } else {
        res.redirect('/')
    } %>

    <%- messages() %>

    <% if (errors && errors.length > 0) { %>
        <ul class="notice">
            <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <form id="updateForm" class="account-form" action="/inv/update" method="post">
        <fieldset>
            <legend>Editar Veículo</legend>

            <label for="classificationList">Classificação:</label>
            <%- classificationSelect %>

            <label for="inv_make">Marca:</label>
            <input type="text" name="inv_make" id="inv_make" required minlength="3" value="<%= locals.inv_make %>">

            <label for="inv_model">Modelo:</label>
            <input type="text" name="inv_model" id="inv_model" required minlength="3" value="<%= locals.inv_model %>">

            <label for="inv_year">Ano:</label>
            <input type="number" name="inv_year" id="inv_year" required min="1900" max="2099" value="<%= locals.inv_year %>">

            <label for="inv_description">Descrição:</label>
            <textarea name="inv_description" id="inv_description" required><%= locals.inv_description %></textarea>

            <label for="inv_image">Caminho da Imagem:</label>
            <input type="text" name="inv_image" id="inv_image" required value="<%= locals.inv_image %>">

            <label for="inv_thumbnail">Caminho da Miniatura:</label>
            <input type="text" name="inv_thumbnail" id="inv_thumbnail" required value="<%= locals.inv_thumbnail %>">

            <label for="inv_price">Preço:</label>
            <input type="number" name="inv_price" id="inv_price" required step="0.01" value="<%= locals.inv_price %>">

            <label for="inv_miles">Quilometragem:</label>
            <input type="number" name="inv_miles" id="inv_miles" required value="<%= locals.inv_miles %>">

            <label for="inv_color">Cor:</label>
            <input type="text" name="inv_color" id="inv_color" required value="<%= locals.inv_color %>">

            <button type="submit" disabled>Atualizar Veículo</button>
            
            <input type="hidden" name="inv_id"<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"<% } %>>
        </fieldset>
    </form>
</div>

<script src="/js/inv-update.js"></script>